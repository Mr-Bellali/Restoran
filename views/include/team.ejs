<div class="container-xxl pt-5 pb-3">
    <div class="container">
        <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
            <h5 class="section-title ff-secondary text-center text-primary fw-normal">Team Members</h5>
            <h1 class="mb-5">Our Master Chefs</h1>
        </div>
        <div class="row g-4">
            
            <!-- team.ejs -->

<% if (chefs && chefs.length > 0) { %>
    <div class="row">
        <% chefs.forEach(function(chef){ %>
            <div class="col-lg-3 col-md-6 wow fadeInUp" data-wow-delay="0.5s">
                <div class="team-item text-center rounded overflow-hidden">
                    <div class="rounded-circle overflow-hidden m-4">
                        <img class="img-fluid" src="<%= chef.image.replace('./public','') %>" alt="Chef Image">
                    </div>
                    <h5 class="mb-0"><%= chef.name_chef %></h5>
                    <small><%= chef.designation %></small>
                    <div class="d-flex justify-content-center mt-3">
                        <% chef.SocialsNet.forEach(function(socialNet){ %>
                            <a class="btn btn-square btn-primary mx-1" href="<%= socialNet.facebook %>">
                                <i class="fab fa-facebook-f"></i>
                            </a>
                            <a class="btn btn-square btn-primary mx-1" href="<%= socialNet.twitter %>">
                                <i class="fab fa-twitter"></i>
                            </a>
                            <a class="btn btn-square btn-primary mx-1" href="<%= socialNet.instagram %>">
                                <i class="fab fa-instagram"></i>
                            </a>
                        <% }); %>
                    </div>
                </div>
            </div>
        <% }); %>
    </div>
<% } else { %>
    <p>No chefs available.</p>
<% } %>

        </div>
    </div>
</div>