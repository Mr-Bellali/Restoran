    <script>
        const queryString = window.location.search;
        const urlParams = new URLSearchParams(queryString);
        const status = urlParams.get('status');

        function showAlert(message, variant) {
        const alertContainer = document.createElement('div');
        alertContainer.classList.add('alert', 'alert-dismissible', `alert-${variant}`);
        alertContainer.style.position = 'fixed';
        alertContainer.style.top = '5rem';
        alertContainer.style.right = '2rem';
        alertContainer.style.width = '15rem';

        const closeButton = document.createElement('button');
        closeButton.type = 'button';
        closeButton.classList.add('btn-close');
        closeButton.setAttribute('data-bs-dismiss', 'alert');
        closeButton.setAttribute('aria-label', 'Close');

        alertContainer.appendChild(document.createTextNode(message));
        alertContainer.appendChild(closeButton);

        document.body.appendChild(alertContainer);

        setTimeout(() => {
            alertContainer.remove();
        }, 3000); // Timeout in milliseconds (3 seconds)
        }

        if (status === 'success') {
        showAlert('Created successfully!', 'success');
        } else if (status === 'failed') {
        showAlert('Operation failed, please try again!', 'danger');
        }
    </script>
    

