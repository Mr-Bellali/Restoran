                    <input type="text" class="form-control" id="lname" name="price"
                        placeholder="Price Here">
                </div>
            </div>
            <div class="form-group row">
                <label for="email1"
                    class="col-sm-3 text-end control-label col-form-label">Image</label>
                <div class="col-sm-9">
                    <input type="file" class="form-control" id="email1" name="image" accept="image/*"
                        placeholder="Upload an image">
                </div>
            </div>
            <div class="form-group row">
